            Text="Phone Number"
            FontSize="16"
            TextColor="#A90003"
            Grid.Column= "0"
            HorizontalOptions="Center"
            Grid.ColumnSpan="3"
            Grid.Row="4"
        />
        <Label
            Text="+420 703 366 966"
            FontSize="35"
            TextColor="Gray"
            Grid.Column= "0"
            HorizontalOptions="Center"
            Grid.ColumnSpan="3"
            Grid.Row="4"
        />

        <Label
            Text="Mail"
            FontSize="16"
            TextColor="#A90003"
            Grid.Column= "0"
            HorizontalOptions="Center"
            Grid.ColumnSpan="3"
            Grid.Row="5"
        />
