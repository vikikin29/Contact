        />

        <Label
            Text="Adress"
            FontSize="16"
            TextColor="#A90003"
            Grid.Column= "0"
            Grid.ColumnSpan="3"
            HorizontalOptions="Center"
            Grid.Row="6"
        />
        <Label
            Text="CIMICKA 420"
            FontSize="26"
            TextColor="Gray"
